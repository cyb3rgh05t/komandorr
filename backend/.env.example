# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Configuration
# Set log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/komandorr.log

# Enable/disable file logging (true/false)
LOG_ENABLE_FILE=true

# Show timestamp in console output (true/false)
LOG_SHOW_TIMESTAMP_CONSOLE=false

# Include module/function/line info in file logs (true/false)
LOG_SHOW_LOCATION_FILE=true

# Timezone Configuration
# Set your timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=UTC

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Basic Authentication
# Set to true to enable authentication
ENABLE_AUTH=false
# Change these credentials in production!
AUTH_USERNAME=admin
AUTH_PASSWORD=admin

GITHUB_TOKEN=ghp_your_personal_access_token_here